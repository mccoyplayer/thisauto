<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory app:title="Combat Script: Selected none" app:key="combatScriptTitle">
        <Preference
            app:key="filePicker"
            app:title="Select Combat Script"
            app:summary="Select the combat script in .txt format that will be used for Combat Mode. \n\nIf none is selected, it will default to Full/Semi Auto."/>
    </PreferenceCategory>

    <PreferenceCategory app:title="Farming Mode">
        <ListPreference
            app:entries="@array/farming_mode_entries"
            app:entryValues="@array/farming_mode_values"
            app:key="farmingModePicker"
            app:title="Select Farming Mode"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:entries="@array/list_entries"
            app:entryValues="@array/list_values"
            app:key="missionPicker"
            app:isPreferenceVisible="false"
            app:title="Select Mission to farm from"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:entries="@array/list_entries"
            app:entryValues="@array/list_values"
            app:key="itemPicker"
            app:isPreferenceVisible="false"
            app:title="Select Item to farm"
            app:useSimpleSummaryProvider="true" />

        <SeekBarPreference
            app:min="1"
            android:max="100"
            app:key="itemAmountPicker"
            app:isPreferenceVisible="false"
            app:title="Item Amount to farm"
            app:showSeekBarValue="true"
            app:defaultValue="1" />

        <Preference
            app:key="summonPicker"
            app:isPreferenceVisible="false"
            app:title="Select Summon(s)"
            app:summary="Select the Summon(s) in order from highest to lowest priority for Combat Mode." />

        <ListPreference
            app:entries="@array/group_entries"
            app:entryValues="@array/group_values"
            app:defaultValue="Group 1"
            app:isPreferenceVisible="false"
            app:key="groupPicker"
            app:title="Select Group"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:entries="@array/party_entries"
            app:entryValues="@array/party_values"
            app:defaultValue="Party 1"
            app:isPreferenceVisible="false"
            app:key="partyPicker"
            app:title="Select Party"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>
</PreferenceScreen>